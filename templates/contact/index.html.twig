{% extends 'base.html.twig' %}

{% block title %}Contact - Portfolio BTS SIO SLAM{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="mb-5">
        <h1 class="display-4 fw-bold mb-3">Contact</h1>
        <p class="lead text-muted">
            N'hésitez pas à me contacter pour toute question ou proposition.
        </p>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h2 class="h5 fw-bold mb-0">Envoyez-moi un message</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.subject) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.subject) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.message) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.message) }}
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Envoyer le message</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h2 class="h5 fw-bold mb-0">Informations de contact</h2>
                </div>
                <div class="card-body">
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="fas fa-envelope text-primary"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="h6 fw-bold">Email</h3>
                            <p class="text-muted mb-0">votre.email@exemple.com</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="fas fa-phone text-primary"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="h6 fw-bold">Téléphone</h3>
                            <p class="text-muted mb-0">+33 6 12 34 56 78</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="h6 fw-bold">Localisation</h3>
                            <p class="text-muted mb-0">Votre ville, France</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}