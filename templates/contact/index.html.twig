{% extends 'base.html.twig' %}

{% block title %}Contact - Portfolio BTS SIO SLAM{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Contact</h1>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">Envoyez-moi un message</h2>
                    
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    {{ form_start(contactForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(contactForm.nom) }}
                                {{ form_widget(contactForm.nom) }}
                                <div class="form-error">
                                    {{ form_errors(contactForm.nom) }}
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(contactForm.email) }}
                                {{ form_widget(contactForm.email) }}
                                <div class="form-error">
                                    {{ form_errors(contactForm.email) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(contactForm.sujet) }}
                            {{ form_widget(contactForm.sujet) }}
                            <div class="form-error">
                                {{ form_errors(contactForm.sujet) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(contactForm.message) }}
                            {{ form_widget(contactForm.message) }}
                            <div class="form-error">
                                {{ form_errors(contactForm.message) }}
                            </div>
                        </div>
                        
                        {# Le champ honeypot caché #}
                        {{ form_widget(contactForm.website) }}
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer le message
                            </button>
                        </div>
                    {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">Informations de contact</h2>
                    
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="fas fa-envelope text-primary fa-fw fa-lg"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="h6 mb-1">Email</h3>
                            <p class="mb-0">Emeric.grall@orange.fr</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="fas fa-phone text-primary fa-fw fa-lg"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="h6 mb-1">Téléphone</h3>
                            <p class="mb-0">+33 6 47 26 12 41</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-map-marker-alt text-primary fa-fw fa-lg"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="h6 mb-1">Localisation</h3>
                            <p class="mb-0">Avranches, France</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-3">Réseaux sociaux</h2>
                    
                    <div class="d-flex justify-content-around">
                        <a href="https://github.com/Spitskyyy" target="_blank" class="btn btn-outline-dark" title="GitHub">
                            <i class="fab fa-github fa-lg"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/emeric-grall/" target="_blank" class="btn btn-outline-primary" title="LinkedIn">
                            <i class="fab fa-linkedin fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}